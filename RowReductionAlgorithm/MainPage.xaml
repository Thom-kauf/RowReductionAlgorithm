<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RowReductionAlgorithm.MainPage">

    <ScrollView>

        <VerticalStackLayout
            x:Name="vsl"
            HorizontalOptions="Center"
            
            >
            <HorizontalStackLayout
                VerticalOptions="EndAndExpand"
                HorizontalOptions="EndAndExpand"
                    x:Name="HSL"
                HeightRequest="40"
                WidthRequest="400">
                <Label
                    Text="Rows: "
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="32"
                    HorizontalOptions="Center" 
                    />
                <Entry
                        x:Name = "rowNum"
                        
                    />

                <Label
                        Text = "Columns:"
                        FontSize = "32"
                    />
                <Entry
                        x:Name = "colNum"
                    />

                <Button
                        x:Name="CreateMatrix"
                        Text="Set Dimensions"
                        Clicked="SetDimensions"
                        />

            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
